<body>
    <div class="container">
        <h1>Text Repeater</h1>
        <label for="text">Enter Text:</label>
        <input type="text" id="text" placeholder="Write something..." />
        
        <label for="number">Enter Number:</label>
        <input type="number" id="number" placeholder="Enter a number..." />
        
        <button onclick="repeatText()">Repeat</button>
        
        <h2>Output:</h2>
        <div id="output"></div>
    </div>

    <script>
        function repeatText() {
            const text = document.getElementById('text').value;
            const number = parseInt(document.getElementById('number').value);
            const outputDiv = document.getElementById('output');
            
            if (!text) {
                outputDiv.innerHTML = 'Please enter some text.';
                return;
            }
            
            if (isNaN(number) || number <= 0) {
                outputDiv.innerHTML = 'Please enter a valid positive number.';
                return;
            }

            let repeatedText = '';
            for (let i = 0; i < number; i++) {
                repeatedText += text + '<br>';
            }

            outputDiv.innerHTML = repeatedText;
        }
    </script>
</body>
